#ifndef   _GPG4_PROPLIST_INL_
#define   _GPG4_PROPLIST_INL_

namespace GPG4
{

//--------------------------------------------------------------------------------------------------------------------//
//                                                CONSTRUCTORS / DESTRUCTOR                                           //
//--------------------------------------------------------------------------------------------------------------------//

INLINE CPropList::CPropList()
  {}

//--------------------------------------------------------------------------------------------------------------------//
//                                                ACCESS                                                              //
//--------------------------------------------------------------------------------------------------------------------//

INLINE CProperty* CPropList::GetFirstProp()
  {
  m_CurrentProp = m_Properties.begin();
  return GetNextProp();
  }

INLINE CProperty* CPropList::GetNextProp()
  {
  if(m_CurrentProp == m_Properties.end()) return NULL;
  CProperty* pProp = *m_CurrentProp;
  ++m_CurrentProp;
  return pProp;
  }

//--------------------------------------------------------------------------------------------------------------------//
//                                                MANAGEMENT                                                          //
//--------------------------------------------------------------------------------------------------------------------//

INLINE void CPropList::AddProp(CProperty* pProp)
  {
  m_Properties.push_back(pProp);
  }

//--------------------------------------------------------------------------------------------------------------------//

} // namespace

#endif // _GPG4_PROPLIST_INL_
